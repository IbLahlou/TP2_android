<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1, 4"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_span="4"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal|center_vertical"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="Saisir vos information :"
            android:textColor="#03A9F4"
            android:textSize="20sp"
            android:textStyle="bold" />
    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vspace1"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_span="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/label0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Nom:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/nom"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:ems="10"
            android:inputType="text"
            android:text="saisir votre nom" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="    Prénom :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/prenom"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:ems="10"
            android:inputType="text"
            android:text="saisir votre prénom" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Email :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/email"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/label4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_span="2"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="    Date de Naissance :"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_conversion_absoluteHeight="45dp"
            tools:layout_conversion_absoluteWidth="96dp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="205dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Spinner
            android:id="@+id/jours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/jours"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="140dp"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="206dp" />

        <Spinner
            android:id="@+id/mois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/mois"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="72dp"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="206dp" />

        <Spinner
            android:id="@+id/anne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/annee"
            tools:layout_conversion_absoluteHeight="24dp"
            tools:layout_conversion_absoluteWidth="72dp"
            tools:layout_editor_absoluteX="246dp"
            tools:layout_editor_absoluteY="206dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Sexe"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Female" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/label7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Ville"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <MultiAutoCompleteTextView
            android:id="@+id/MAutoC"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="hello" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/label9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Intérêt"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <CheckBox
            android:id="@+id/choix1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android" />

        <CheckBox
            android:id="@+id/choix2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JEE" />

        <CheckBox
            android:id="@+id/choix3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vspace4"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_span="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button3"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_horizontal|center_vertical"
            android:layout_span="4"
            android:backgroundTint="#EFDEC4"
            android:text="Enregistrer"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            tools:layout_gravity="center" />
    </TableRow>

</TableLayout>